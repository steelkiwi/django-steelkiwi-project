upstream {{ project_name }} {
    server 127.0.0.1:8000;
    server 127.0.0.1:8001;
}

server {
    listen 80;
    server_name {{ project_name }}.steelkiwi.com;

    charset utf-8;

    client_max_body_size 512m;

    location /static/ {
        alias /home/webmaster/www/{{ project_name }}.steelkiwi.com/public/static/;
    }

    location /media/ {
        alias /home/webmaster/www/{{ project_name }}.steelkiwi.com/public/media/;
    }

    location /favicon.ico {
        alias /home/webmaster/www/{{ project_name }}.steelkiwi.com/public/static/images/favicon.ico;
    }

    location / {
        proxy_pass         http://{{ project_name }};
        proxy_redirect     off;
        proxy_set_header   Host             $host;
        proxy_set_header   X-Real-IP        $remote_addr;
        proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
    }
}
